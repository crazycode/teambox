- content_for :banner do
  = user_page_name(@user)

- if @shares_invited_projects
  #primer
    .box
      %p= t('.pending_invite', :name => @user.name)

- content_for :column do
  = image_tag @user.avatar_or_gravatar_url(:profile), :class => 'avatar'
  - if current_user.observable?(@user)
    - unless @user.biography.empty?
      %p.biography= @user.biography
    = render_card(@card)
    =# list_projects(@user.projects)

- if current_user.observable?(@user)
  =# new_comment_user_form(current_user)
  %h2= t('.recent_activity_for', :user_name => @user.name)
  #activities
    = list_activities(@activities)
