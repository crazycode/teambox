- tasks = assign_tasks(project,task_list,sub_action)
%table.task_list{ :id => task_list_id(:with_main_tasks,project,task_list) }
  - if location_name?('index_task_lists')
    %thead
      %tr
        %th{:colspan => 4}
          = comments_count(task_list,:content)
          = the_task_list_link(task_list)
                        
  %tbody{ :id => task_list_id(:the_main_tasks,project,task_list) }
    = list_tabular_tasks(project,task_list,tasks,sub_action)